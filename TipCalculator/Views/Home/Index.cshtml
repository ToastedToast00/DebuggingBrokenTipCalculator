@model Calculator

@{
    ViewBag.Title = "Tip Calculator";
}

<div asp-validation-summary="All"></div>

<form asp-action="Index" method="post">
    <div>
        <label asp-for="MealCost">Cost of meal:</label>
        <input asp-for="MealCost" />
    </div>
    <div>
        <label>15% tip:</label>
        <label>@(ViewBag.Fifteen != null ? ((double)ViewBag.Fifteen).ToString("C2") : "$0.00")</label>
    </div>
    <div>
        <label>20% tip:</label>
        <label>@(ViewBag.Twenty != null ? ((double)ViewBag.Twenty).ToString("C2") : "$0.00")</label>
    </div>
    <div>
        <label>25% tip:</label>
        <label>@(ViewBag.TwentyFive != null ? ((double)ViewBag.TwentyFive).ToString("C2") : "$0.00")</label>
    </div>
    <div>
        <button type="submit">Calculate</button>
        <a asp-action="Index">Clear</a>
    </div>
</form>
